<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/motion_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Scene" />

            <Button
                android:id="@+id/view_transition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViewTransition" />

            <Button
                android:id="@+id/motion_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Effect" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/ImageFilterButton"
                android:layout_width="wrap_content"
                android:text="ImageFilterButton"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/mockView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="MotionLabel"/>

            <Button
                android:id="@+id/Carouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Carouse"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>